//Faça um algoritmo para somar os números pares positivos < 1000 e ao final
//imprimir o resultado.

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <conio.h>
#include <ctype.h>
#include <stdbool.h>

int i, n1, somaPAR = 0, n2;

int main() {

	printf("\nDigite primeiro valor: ");
	scanf_s("%i", &n1);
	printf("\nDigite segundo valor: ");
	scanf_s("%i", &n2);

	for (i = n1; i <= n2; i++)
	
	{

		


		if (i%2==0)
		{
			printf("\n%i", i);
			somaPAR = somaPAR + i;
		}
	}

	printf("\n\nSoma dos pares e: %i", somaPAR);


}
